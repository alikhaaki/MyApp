<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:app="http://schemas.android.com/apk/res-auto"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="@dimen/margin_four"
	    android:clickable="true"
	    android:elevation="14dp"
	    android:foreground="?attr/selectableItemBackgroundBorderless"
	    android:layoutDirection="rtl"
	    app:cardCornerRadius="4dp">

	<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="@dimen/margin_four"
		    android:orientation="vertical"
		    android:padding="@dimen/padding_four">

		<ImageView
			    android:id="@+id/image_tools_asli"
			    android:layout_width="220dp"
			    android:layout_height="100dp"
			    android:layout_gravity="center_horizontal"
			    android:layout_marginBottom="@dimen/margin_four"
			    android:scaleType="fitCenter"
			    tools:src="@drawable/microvavelavazem"/>

		<TextView
			    android:id="@+id/text_tools_header_asli"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:ellipsize="end"
			    android:fontFamily="@font/iransansmobile"
			    android:gravity="left"
			    android:maxLines="1"
			    android:paddingLeft="@dimen/padding_standard"
			    android:paddingRight="@dimen/padding_standard"
			    android:textColor="@color/Black"
			    android:textSize="@dimen/text_tiny"
			    tools:text="ماکرو ویو هاردستون همراه با منو پخت فارسی و گرم کن نان و پخت گوشت و فر گردان همراه با دفترچه و گارانتی و خدمات پس از فروش "/>

		<TextView
			    android:id="@+id/text_tools_sub_asli"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:ellipsize="end"
			    android:fontFamily="@font/iransansmobile"
			    android:gravity="left"
			    android:maxLines="1"
			    android:textColor="@color/Black"
			    android:textSize="@dimen/text_tiny"
			    tools:text="ماکرو ویو هاردستون همراه با منو پخت فارسی و گرم کن نان و پخت گوشت و فر گردان همراه با دفترچه و گارانتی و خدمات پس از فروش "/>

		<View
			    android:layout_width="match_parent"
			    android:layout_height="1dp"
			    android:background="@color/Grey"/>

		<TextView
			    android:id="@+id/text_tools_current_price_asli"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="left"
			    android:fontFamily="@font/iransansmobile"
			    android:gravity="left"
			    android:textColor="@color/GreenText"
			    tools:text="2،000،000 تومان"/>

		<TextView
			    android:id="@+id/text_tools_previous_piece_asli"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="left"
			    android:fontFamily="@font/iransansmobile"
			    android:foreground="@drawable/strike_through"
			    android:gravity="left"
			    android:textColor="@color/RedText"
			    tools:text="1،850،000 تومان"/>
	</LinearLayout>
</android.support.v7.widget.CardView>
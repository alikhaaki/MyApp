<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layoutDirection="rtl">

	<TextView
		    android:id="@+id/text_suggestion_item"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_alignParentTop="true"
		    android:layout_marginRight="@dimen/margin_four"
		    android:layout_marginTop="@dimen/margin_standard"
		    android:padding="@dimen/padding_four"
		    tools:text="پرفروشترین"/>

	<Button
		    android:id="@+id/button_suggestion_show_all"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:background="@color/WhiteColor"
		    android:text="نمایش همه"
		    android:textColor="@color/colorAccent"/>

	<android.support.v7.widget.RecyclerView
		    android:id="@+id/recycler_suggestion"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/button_suggestion_show_all"/>
</RelativeLayout>
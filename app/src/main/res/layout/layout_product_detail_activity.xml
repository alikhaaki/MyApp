<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:app="http://schemas.android.com/apk/res-auto"
	    xmlns:fancy="http://schemas.android.com/apk/res-auto"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:id="@+id/swipeGHatre"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:overScrollMode="never"
	    tools:context=".Activity.ProductDetailActivity">

	<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layoutDirection="rtl"
		    android:orientation="vertical">

		<android.support.v7.widget.Toolbar
			    android:id="@+id/toolbar_product_detail_activity"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@color/colorPrimary"
			    app:theme="@style/ToolbarTheme"/>

		<ss.com.bannerslider.Slider
			    android:id="@+id/sliderProductViewList"
			    android:layout_width="match_parent"
			    android:layout_height="250dp"
			    app:slider_loopSlides="false"
			    app:slider_selectedSlideIndicator="@drawable/circule_indicator"
			    app:slider_unselectedSlideIndicator="@drawable/circule__unselect_indicator"/>

		<RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_margin="@dimen/margin_standard">

			<TextView
				    android:id="@+id/text_title_list"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="@dimen/margin_standard"
				    android:layout_marginRight="@dimen/margin_standard"
				    android:text="مجموعه کنسول بازی سونی مدل PlayStation 4 Slim 2017   کد CUH-2116B
Region 2  -  ظرفیت 1 ترابایت"
				    android:textAlignment="viewStart"
				    android:textColor="@color/Black"
				    android:textSize="16sp"/>

			<TextView
				    android:id="@+id/text_sub_title_list"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_below="@id/text_title_list"
				    android:layout_marginBottom="@dimen/margin_standard"
				    android:layout_marginLeft="@dimen/margin_standard"
				    android:layout_marginRight="@dimen/margin_standard"
				    android:layout_marginTop="@dimen/margin_standard"
				    android:text="Sony PlayStation 4 Slim 2017 Region 2 CUH-2116B 1TB Bundle Game Console "
				    android:textSize="14sp"/>

			<LinearLayout
				    android:id="@+id/line_pishnahad"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_below="@id/text_sub_title_list"
				    android:orientation="horizontal">

				<TextView
					    android:id="@+id/text_propose_pishnahad_list"
					    android:layout_width="0dp"
					    android:layout_height="wrap_content"
					    android:layout_weight=".2"
					    android:fontFamily="@font/universe_font"
					    android:text="پیشنهاد"
					    android:textSize="@dimen/text_header_tiny"
					    android:textStyle="bold"
					    android:visibility="gone"/>

				<TextView
					    android:id="@+id/text_propose_shegeft_list"
					    android:layout_width="0dp"
					    android:layout_height="wrap_content"
					    android:layout_weight=".4"
					    android:fontFamily="@font/universe_font"
					    android:text="شگفت انگیز"
					    android:textColor="@color/colorPrimary"
					    android:textSize="@dimen/text_header_tiny"
					    android:textStyle="bold"
					    android:visibility="gone"/>

				<cn.iwgang.countdownview.CountdownView
					    android:id="@+id/timer_pishnahad_list"
					    android:layout_width="0dp"
					    android:layout_height="wrap_content"
					    android:layout_weight=".4"
					    android:visibility="gone"
					    app:isHideTimeBackground="false"
					    app:isShowHour="true"
					    app:suffixGravity="center"
					    app:suffixTextSize="18sp"
					    app:timeBgColor="#8c8c8c"
					    app:timeBgRadius="6dp"
					    app:timeTextColor="#000"
					    app:timeTextSize="22sp"/>
			</LinearLayout>
		</RelativeLayout>

		<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal">

			<android.support.v7.widget.CardView
				    android:layout_width="120dp"
				    android:layout_height="wrap_content"
				    android:layout_marginBottom="@dimen/margin_standard"
				    android:layout_marginLeft="@dimen/margin_standard"
				    android:layout_marginRight="@dimen/margin_sixteen"
				    android:layout_weight=".5"
				    android:elevation="6dp">

				<mehdi.sakout.fancybuttons.FancyButton
					    android:id="@+id/button_specification_layout"
					    android:layout_width="match_parent"
					    android:layout_height="40dp"
					    android:clickable="true"
					    android:focusable="true"
					    android:fontFamily="@font/iransansmobile"
					    android:foreground="?attr/selectableItemBackground"
					    fancy:fb_defaultColor="@color/WhiteColor"
					    fancy:fb_focusColor="#fdba0003"
					    fancy:fb_iconPaddingTop="8dp"
					    fancy:fb_iconPosition="left"
					    fancy:fb_iconResource="@drawable/ic_moshakhasat"
					    fancy:fb_text="مشخصات"
					    fancy:fb_textColor="@color/Black"/>
			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView
				    android:layout_width="120dp"
				    android:layout_height="wrap_content"
				    android:layout_marginBottom="@dimen/margin_standard"
				    android:layout_marginLeft="@dimen/margin_sixteen"
				    android:layout_marginRight="@dimen/margin_standard"
				    android:layout_weight=".5"
				    android:elevation="6dp">

				<mehdi.sakout.fancybuttons.FancyButton
					    android:id="@+id/button_Comment_item"
					    android:layout_width="match_parent"
					    android:layout_height="40dp"
					    android:clickable="true"
					    android:focusable="true"
					    android:fontFamily="@font/iransansmobile"
					    android:foreground="?attr/selectableItemBackground"
					    fancy:fb_defaultColor="@color/WhiteColor"
					    fancy:fb_focusColor="#fdba0003"
					    fancy:fb_iconPaddingTop="8dp"
					    fancy:fb_iconPosition="left"
					    fancy:fb_iconResource="@drawable/ic_comment_black_24dp"
					    fancy:fb_text="نظرات کاربران"
					    fancy:fb_textColor="@color/Black"/>
			</android.support.v7.widget.CardView>
		</LinearLayout>

		<android.support.v7.widget.CardView
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="@dimen/margin_sixteen"
			    android:layout_marginRight="@dimen/margin_sixteen"
			    android:elevation="16dp">

			<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="vertical"
				    android:padding="@dimen/padding_standard">

				<TextView
					    android:id="@+id/text_detail_garanty_list"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="@dimen/margin_standard"
					    android:drawablePadding="@dimen/margin_standard"
					    android:drawableRight="@drawable/ic_verified_user_black_24dp"
					    android:text="گارانتی 18 ماهه آوند"/>

				<View
					    android:layout_width="match_parent"
					    android:layout_height="1dp"
					    android:layout_marginTop="@dimen/margin_standard"
					    android:background="@color/Grey"/>

				<TextView
					    android:id="@+id/text_detail_shoper_list"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="@dimen/margin_standard"
					    android:drawablePadding="@dimen/margin_standard"
					    android:drawableRight="@drawable/ic_store_black_24dp"
					    android:text="فروش توسط آرمان|رضایت خرید87%"/>

				<TextView
					    android:id="@+id/text_detail_baste_list"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="@dimen/margin_standard"
					    android:drawablePadding="@dimen/margin_standard"
					    android:drawableRight="@drawable/digimastersvg"
					    android:text="بسته بندی و ارسال توسط دیجی کالا"/>

				<TextView
					    android:id="@+id/text_detail_sending_list"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="@dimen/margin_standard"
					    android:drawablePadding="@dimen/margin_standard"
					    android:drawableRight="@drawable/car_pickup"
					    android:text="آماده ارسال از انبار دیجی کالا در 1 روز آینده"/>

				<View
					    android:layout_width="match_parent"
					    android:layout_height="1dp"
					    android:layout_marginTop="@dimen/margin_standard"
					    android:background="@color/Grey"/>

				<LinearLayout
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="@dimen/margin_standard"
					    android:gravity="left"
					    android:orientation="horizontal">

					<TextView
						    android:id="@+id/text_price_discount_list"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_marginLeft="@dimen/margin_standard"
						    android:background="@drawable/strike_through"
						    android:text="6,350,000 تومان"
						    android:textColor="@color/colorPrimary"
						    android:textSize="@dimen/text_sub_header_medium"
						    android:textStyle="bold"
						    android:visibility="gone"/>

					<TextView
						    android:id="@+id/text_price_original_list"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_marginLeft="@dimen/margin_standard"
						    android:text="5,350,000 تومان"
						    android:textSize="@dimen/text_sub_header_medium"
						    android:textStyle="bold"/>
				</LinearLayout>

				<mehdi.sakout.fancybuttons.FancyButton
					    android:id="@+id/button_add_to_basket"
					    android:layout_width="match_parent"
					    android:layout_height="40dp"
					    android:layout_marginBottom="@dimen/margin_standard"
					    android:layout_marginLeft="12dp"
					    android:layout_marginRight="12dp"
					    android:layout_marginTop="@dimen/margin_standard"
					    android:clickable="true"
					    android:focusable="true"
					    android:fontFamily="@font/iransansmobile"
					    android:foreground="?attr/selectableItemBackground"
					    app:fb_defaultColor="@color/GreenText"
					    fancy:fb_focusColor="@color/colorPrimary"
					    fancy:fb_iconPaddingTop="8dp"
					    fancy:fb_iconPosition="left"
					    fancy:fb_iconResource="@drawable/ic_add_shopping_cart_black_24dp"
					    fancy:fb_text="افزودن به سبد خرید"
					    fancy:fb_textColor="@color/WhiteColor"
					    fancy:fb_textSize="@dimen/text_sub_header_medium"/>
			</LinearLayout>
		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="@dimen/margin_sixteen"
			    android:layout_marginRight="@dimen/margin_sixteen"
			    android:layout_marginTop="@dimen/margin_standard"
			    android:elevation="8dp">

			<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="vertical"
				    android:padding="@dimen/padding_standard">

				<at.blogc.android.views.ExpandableTextView
					    android:id="@+id/expandable_text_list"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:ellipsize="end"
					    android:maxLines="4"
					    android:padding="@dimen/padding_four"
					    android:text="@string/expand"
					    android:textColor="@color/Black"
					    app:animation_duration="650"/>

				<View
					    android:layout_width="match_parent"
					    android:layout_height="1dp"
					    android:background="@color/Grey"/>

				<Button
					    android:id="@+id/button_edame_matlab_list"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:background="@color/WhiteColor"
					    android:text="ادامه مطلب"/>
			</LinearLayout>
		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			    android:layout_width="match_parent"
			    android:layout_height="160dp"
			    android:layout_marginBottom="@dimen/margin_standard"
			    android:layout_marginLeft="@dimen/margin_sixteen"
			    android:layout_marginRight="@dimen/margin_sixteen"
			    android:layout_marginTop="@dimen/margin_standard">

			<include layout="@layout/bar_layout"/>
		</android.support.v7.widget.CardView>
	</LinearLayout>
</ScrollView>